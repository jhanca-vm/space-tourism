---
interface Props {
  slug: string
  name: string
}

const { slug, name } = Astro.props
---

<picture
  class:list={[
    'block h-[10.625rem] -mx-6 sm:-mx-10 sm:h-auto lg:col-start-2 lg:ml-0',
    'xl:-mr-[10.25rem]'
  ]}
>
  <source
    srcset={`/images/technology/${slug}-portrait.jpg`}
    media="(min-width: 1024px)"
    width="515"
    height="527"
  />
  <img
    class="h-full w-full object-cover"
    src={`/images/technology/${slug}-landscape.jpg`}
    alt={name}
    width="768"
    height="310"
  />
</picture>
